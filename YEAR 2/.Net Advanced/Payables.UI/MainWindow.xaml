<Window x:Class="PayablesApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="showBigInvoicesButton" Margin="10" Padding="10" Click="ShowBigInvoicesButton_OnClick">Show invoices > 20000</Button>
            <Button x:Name="showInvoicesSumButton" Margin="10" Padding="10" Click="ShowInvoicesSumButton_OnClick">Show sum of invoices</Button>
            <Button x:Name="showInvoicesDueButton" Margin="10" Padding="10" Click="ShowInvoicesDueButton_OnClick">Show invoices due</Button>
            <Button x:Name="showGroupedInvoicesButton" Margin="10" Padding="10" Click="ShowGroupedInvoicesButton_OnClick">Show grouped invoices</Button>
            <Button x:Name="showBigInvoicesWithVendorButton" Margin="10" Padding="10" Click="ShowBigInvoicesWithVendorButton_OnClick">Show invoices > 2000 with Vendor</Button>

        </StackPanel>
    </Grid>
</Window>
